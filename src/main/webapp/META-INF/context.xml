<?xml version="1.0" encoding="UTF-8"?>
<Context>
    <WatchedResource>WEB-INF/web.xml</WatchedResource>
    <Resource
        name="jdbc/postgreSQL"
        auth="Container"
        type="javax.sql.DataSource"
        maxTotal="50"
        maxIdle="30"
        maxWaitMillis="1000"
        initialSize = "5"
        username="postgres"
        password="dontHack"
        driverClassName="org.postgresql.Driver"
        url="jdbc:postgresql://localhost:5432/hotel"
    />
</Context>